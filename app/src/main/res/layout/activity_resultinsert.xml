<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FBE7E7"
    tools:context=".Resultinsert">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="30dp"
        android:paddingTop="40dp">

        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />

        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Name"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="200px"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"

                android:hint="Allow Only Capital Letter"
                android:textSize="18sp" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Class_Section"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/class_section"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:width="100px"
                android:digits="0123456789ABCDEFGIJKLMNOPQRSTUVWXYZ"
                android:hint="example: 9A" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="RollNo"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/rollno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100px"
                android:hint="roll no"
                android:inputType="number" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Year"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Semester"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/spinnersemester"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- <EditText
                android:id="@+id/semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100px" />-->
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Subject"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/spinnersubject"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!--  <EditText
                android:id="@+id/subj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100px" />-->
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Marks"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100px"
                android:hint="marks"
                android:inputType="number" />
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="40dp">


            <Button
                android:id="@+id/btnSave"
                style="@android:style/Widget.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:background="#F6E2E2"
                android:text="SUBMIT RESULT"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>
</RelativeLayout>